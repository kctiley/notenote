.wrapper_with_padding
  #note_show
    %h1.title= @note.title
    %p= simple_format(@note.content)
    .buttons
      =link_to "Edit", edit_note_path(@note), class: "button"
      =link_to "Delete", note_path(@note), method:  :delete, data:{ confirm: "You are about to delete " + @note.title + ". Are you sure?"}, class: "button"